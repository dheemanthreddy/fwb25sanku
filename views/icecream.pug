extends layout

block content
  h1= title
  - let icecream = results;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 
  div(class='container-fluid')
    div(class='row')
      each ice, index in icecream 
        div(class='col-sm-2' onclick='buy('+index+')') #{ice.icecream_type} #{ice.quantity} #{ice.cost}
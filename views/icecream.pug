extends layout

block content
  - let destinations1 = `dispatch(\"/icecream/create\")` 
   button.btn( class="btn-primary m-1", onclick= destinations1) Create
  h1= title 
  - let apple = results;
  script.
    function buy(x){
      alert('Purchased Item: ' + x)
   } 
  div(class='container-fluid')
    div(class='row m-1')
      each m, index in apple 
       - let destination = `dispatch(\"/icecreams/update?id=${m._id}\")`
       - let destinations2 = `dispatch(\"/icecreams/detail?id=${m._id}\")`
       - let destinations3 = `dispatch(\"/icecreams/delete?id=${m._id}\")`

       div(class="row-sm-2", class="m-1") Item #{m.icecream_type}(#{m.quantity}) is #{m.cost}
        button.btn( class="btn-primary ml-1", onclick= destination) Update
        button.btn( class="btn-success m-1", onclick= destinations2) Detail
        button.btn( class="btn-danger m-1", onclick= destinations3) Delete


  script. 
    function dispatch(path){ 
      window.location.href=path 
    }